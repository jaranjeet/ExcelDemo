<h1>Products</h1>
<table class="table table-striped">
  <tr>
    <th>Product Name</th>
    <th>Release Date</th>
    <th>Price</th>
  </tr>
  <% @products.each do |product| %>
  <tr>
    <td><%= product.product_name %></td>
    <td><%= product.release_date %></td>
    <td><%= product.price %> &#8377</td>
  </tr>
  <% end %>
</table>
<%= link_to 'Download Excel', products_path(format: "xls") %>
